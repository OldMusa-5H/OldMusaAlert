<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:padding="10dp"
                                             android:orientation="vertical">

    <EditText
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/nameSensore"
            android:hint="name"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            app:layout_constraintEnd_toStartOf="@+id/guideline39" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/guideline40"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/MappaSensore"
            android:hint="mappa"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            app:layout_constraintEnd_toStartOf="@+id/guideline39" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/guideline41"/>

    <!-- lista checkbox dei canali -->
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            android:text="Temperatura"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline42"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_umidità"
            android:text="Umidità"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/temp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_CO2"
            android:text="Anidride Carbonica"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ch_umidità"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_luce"
            android:text="Luce"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ch_CO2"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_persone"
            android:text="Persone"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ch_luce"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_ozono"
            android:text="Ozono"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ch_persone"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddButtonS"
            android:text="Aggiungi"
            app:layout_constraintStart_toStartOf="@+id/guideline38"
            app:layout_constraintEnd_toStartOf="@+id/guideline39"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintTop_toTopOf="@+id/guideline43"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline38"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.1"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline39"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.90"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline40"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline41"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.24"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline42"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.33"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline43"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.89"/>

</android.support.constraint.ConstraintLayout>