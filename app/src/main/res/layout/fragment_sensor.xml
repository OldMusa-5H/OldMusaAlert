<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline75" app:layout_constraintStart_toStartOf="@+id/guideline113"
            app:layout_constraintBottom_toTopOf="@+id/guideline78" android:id="@+id/channelsList"
            app:layout_constraintEnd_toStartOf="@+id/guideline120"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline75"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.10"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline78"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.85"/>
    <ImageButton
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:id="@+id/addChannelButton"
            android:visibility="gone"
            android:background="@drawable/ic_circle_button"
            android:src="@drawable/ic_channel"
            app:layout_constraintStart_toStartOf="@+id/guideline79"
            app:layout_constraintTop_toTopOf="@+id/guideline80" app:layout_constraintBottom_toTopOf="@+id/guideline81"
            app:layout_constraintEnd_toStartOf="@+id/guideline82"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline79"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.40"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline80"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.90"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline81"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline82"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline113"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline120"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.9"/>
</androidx.constraintlayout.widget.ConstraintLayout>