<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">



    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline45"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.20"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline46"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.80"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline47"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.06"/>

    <TextView
        android:text="Aggiungi mappa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline45"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintTop_toTopOf="@+id/guideline47"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/AddButtonMap"
            android:text="Aggiungi"
            app:layout_constraintBottom_toTopOf="@+id/guideline48" app:layout_constraintEnd_toStartOf="@+id/guideline46"
            app:layout_constraintStart_toStartOf="@+id/guideline45"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline48"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.35"/>
</android.support.constraint.ConstraintLayout>