<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.cnr_isac.oldmusa.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_home_to_site"
            app:destination="@id/site" />
    </fragment>
    <fragment
        android:id="@+id/site"
        android:name="com.cnr_isac.oldmusa.Site"
        android:label="Site">
        <action
            android:id="@+id/action_site_to_quickGraph"
            app:destination="@id/quickGraph" />
        <argument
            android:name="siteId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/quickGraph"
        android:name="com.cnr_isac.oldmusa.QuickGraph"
        android:label="QuickGraph" >
        <argument
            android:name="sensorId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/manageUsers"
        android:name="com.cnr_isac.oldmusa.ManageUsers"
        android:label="ManageUsers" >
        <action
            android:id="@+id/action_manageUsers_to_userDetailsEdit"
            app:destination="@id/userDetailsEdit" />
    </fragment>
    <fragment
        android:id="@+id/userDetailsEdit"
        android:name="com.cnr_isac.oldmusa.UserDetailsEdit"
        android:label="fragment_user_details_edit"
        tools:layout="@layout/fragment_user_details_edit" >
        <argument
            android:name="userId"
            app:argType="long" />
    </fragment>
</navigation>